<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oneChat">

	<insert id="createOneChatRoom" parameterType="map">
		INSERT INTO
		OneToOneChat (loggedInUserID, otherUserID)
		VALUES (#{loggedInUserID},
		#{otherUserID})
	</insert>

	<select id="" resultType="com.kdt.dto.OneToOneChatDTO">
		SELECT * FROM OneToOneChat where oneSeq
		= #{oneSeq}
	</select>
	
	<!-- OneToOneChat 테이블 존재 쿼리 -->
	<select id="oneroomExists" resultType="int">
        SELECT COUNT(*) AS room_count
        FROM OneToOneChat
        WHERE (loggedInUserID = #{loggedInUserID} AND otherUserID = #{otherUserID})
           OR (otherUserID = #{otherUserID} AND loggedInUserID = #{loggedInUserID})
    </select>
    
     <!-- OneToOneChat 테이블의 전체 레코드 수를 가져오는 쿼리 -->
    <select id="oneCountAll" resultType="int">
        SELECT COUNT(*) FROM OneToOneChat;
    </select>
</mapper>